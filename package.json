{
  "name": "@retouchjs/core",
  "version": "0.0.2",
  "description": "Rétouch — a canvas-based image editor library",
  "author": "",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite demo",
    "build": "tsup",
    "check": "biome check .",
    "format": "biome check --write .",
    "lint": "biome lint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "jsdom": "^25.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.0",
    "vitest-canvas-mock": "^0.3.0"
  },
  "keywords": [
    "canvas",
    "image-editor",
    "photo-editor",
    "retouch",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/onursavas/retouch.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  }
}
